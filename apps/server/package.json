{
  "name": "server-template",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=22.20.0",
    "pnpm": ">=10.20.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "start": "node dist/index.js",
    "lint": "eslint src --max-warnings=0 --no-inline-config",
    "lint:fix": "eslint src --fix",
    "lint:local": "eslint src",
    "test:logs": "node scripts/test-logging.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "pnpm exec prisma generate",
    "db:push": "prisma db push",
    "db:test:push": "pnpm exec dotenvx run -f .env.test -- prisma db push",
    "test:ci": "pnpm run lint && pnpm run build && pnpm run db:test:push && pnpm run test"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/zod-openapi": "^1.2.1",
    "@prisma/client": "^7.3.0",
    "@scalar/hono-api-reference": "^0.9.40",
    "@repo/shared": "workspace:*",
    "argon2": "^0.44.0",
    "dotenv": "^17.2.4",
    "dotenv-expand": "^12.0.3",
    "graphql": "^16.11.0",
    "graphql-ws": "^6.0.6",
    "graphql-yoga": "^5.16.2",
    "hono": "^4.11.9",
    "hono-pino": "^0.10.3",
    "hono-rate-limiter": "^0.5.3",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "pino-roll": "^4.0.0",
    "prom-client": "^15.1.3",
    "rotating-file-stream": "^3.2.8",
    "ws": "^8.18.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.3.0",
    "@dotenvx/dotenvx": "^1.52.0",
    "@types/node": "25.2.1",
    "@types/supertest": "^6.0.3",
    "eslint": "^10.0.0",
    "eslint-plugin-format": "^1.4.0",
    "postcss": "^8.5.6",
    "prisma": "^7.3.0",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "@types/ws": "^8.18.1"
  }
}
