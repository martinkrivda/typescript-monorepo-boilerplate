{
  "name": "api-template",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=22.20.0",
    "pnpm": ">=10.20.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --max-warnings=0 --no-inline-config",
    "lint:fix": "eslint src --fix",
    "lint:local": "eslint src",
    "test:logs": "node scripts/test-logging.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "pnpm exec prisma generate",
    "db:push": "prisma db push",
    "db:test:push": "pnpm exec dotenvx run -f .env.test -- prisma db push",
    "test:ci": "pnpm run lint && pnpm run build && pnpm run db:test:push && pnpm run test"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/zod-openapi": "^1.2.0",
    "@prisma/client": "^7.3.0",
    "@scalar/hono-api-reference": "^0.9.35",
    "@repo/shared": "workspace:*",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "hono": "^4.11.5",
    "hono-pino": "^0.10.3",
    "hono-rate-limiter": "^0.5.3",
    "pino": "^10.2.1",
    "pino-pretty": "^13.1.3",
    "pino-roll": "^4.0.0",
    "prom-client": "^15.1.3",
    "rotating-file-stream": "^3.2.7",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@dotenvx/dotenvx": "^1.52.0",
    "@types/node": "22.17.0",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.3.1",
    "postcss": "^8.5.6",
    "prisma": "^7.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
